<?xml version="1.0" encoding="utf-8"?>
<extension type="component" version="1.5.0" method="upgrade">
    <name>Tags</name>
    <version>2.0</version>
    <creationDate>April 2012</creationDate>
    <author>Dioscouri</author>
    <authorEmail>info@dioscouri.com</authorEmail>
    <authorUrl>http://www.dioscouri.com</authorUrl>
    <copyright>2012 Dioscouri.com</copyright>
    <copyrightHolder>Dioscouri.com</copyrightHolder>
    <license>GNU General Public License v2</license>
    <description>A Tags extension for Joomla</description>

	<!-- Application/site -->    
	<files folder="site">
		<file>tags.php</file>
		<file>controller.php</file>
        <file>router.php</file>
		<file>index.html</file>
		<folder>controllers</folder>
		<folder>models</folder>
		<folder>views</folder>
	</files>

	<languages folder="languages/site">
		<language tag="en-GB">en-GB.com_tags.ini</language>
	</languages>
	
	<!-- Application/administrator -->
	<administration>
		<menu img="../media/com_tags/images/tags_16.png">COM_TAGS</menu>

		<files folder="admin">
			<file>tags.php</file>
			<file>controller.php</file>
			<file>defines.php</file>
			<file>index.html</file>
			<folder>controllers</folder>
            <folder>elements</folder>
			<folder>helpers</folder>
			<folder>install</folder>
			<folder>library</folder>
			<folder>models</folder>
			<folder>tables</folder>
			<folder>views</folder>
		</files>

		<languages folder="languages/admin">
			<language tag="en-GB">en-GB.com_tags.ini</language>
			<language tag="en-GB">en-GB.com_tags.menu.ini</language>
			<language tag="en-GB">en-GB.com_tags.sys.ini</language>
		</languages>
	</administration>
	
	<!-- Installation -->
	<install>
		<sql>
			<file charset="utf8" driver="mysql">/install/install.sql</file>
		</sql>
	</install>
	
	<installfile>install.php</installfile>
	<uninstallfile>uninstall.php</uninstallfile>

	<!--  Media -->
	<media destination="com_tags" folder="media">
		<folder>css</folder>
		<folder>images</folder>
		<folder>js</folder>
		<folder>menus</folder>
		<file>index.html</file>
	</media>
		
	<!-- Modules -->	
	<modules>
		<!-- <module module="mod_whatever" publish="true" client="site"/> -->
        <module module="modules/mod_tags_cloud" client="site" position="left" /> 
	</modules> 

	<!-- Plugins -->
	<plugins>
        <!-- Sample: -->
        <!-- Instructions: plugin="package_folder_containing_plugin_files" element="plugin_filename" -->
		<!-- <plugin plugin="tags_plugin_user" publish="false" group="user" element="tags" /> -->
        <plugin plugin="plugins/tags_plugin_editors-xtd" publish="true" group="editors-xtd" element="tags" />
        <plugin plugin="plugins/tags_plugin_content" publish="true" group="content" element="tags" />
        <!--<plugin plugin="tags_plugin_k2" publish="true" group="k2" element="tags" />-->
	</plugins>
</extension>
